{
  "services": [
    {
      "id": "ogc-reference",
      "title": "Reference OGC API (pygeoapi-style)",
      "baseUrl": "https://example.org/ogcapi",
      "features": {
        "enabled": true,
        "collectionsToolName": "list_feature_collections",
        "itemsToolName": "get_features",
        "defaultCrs": "EPSG:4326",
        "collectionFilters": [
          "landsat",
          "sentinel",
          "admin_boundaries"
        ]
      },
      "records": {
        "enabled": true,
        "collectionsToolName": "list_record_collections",
        "searchToolName": "search_records",
        "defaultLimit": 20
      },
      "edr": {
        "enabled": true,
        "collectionsToolName": "list_edr_collections",
        "positionToolName": "edr_position",
        "defaultVerticalCrs": "EPSG:4979"
      }
    },
    {
      "id": "minimal-features-only",
      "title": "Minimal Features-only OGC API",
      "baseUrl": "https://features-only.example.org/ogcapi",
      "features": {
        "enabled": true,
        "collectionsToolName": "list_feature_collections",
        "itemsToolName": "get_features",
        "defaultCrs": "EPSG:4326"
      },
      "records": {
        "enabled": false
      },
      "edr": {
        "enabled": false
      }
    }
  ]
}

